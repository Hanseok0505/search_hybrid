APP_NAME=hybrid-search-service
APP_ENV=dev
APP_PORT=8000
LOG_LEVEL=INFO

ELASTIC_ENABLED=true
ELASTIC_URL=http://elasticsearch:9200
ELASTIC_INDEX=documents
ELASTIC_TIMEOUT_SEC=1.5

MILVUS_ENABLED=true
MILVUS_HOST=milvus-standalone
MILVUS_PORT=19530
MILVUS_COLLECTION=document_vectors
MILVUS_TIMEOUT_SEC=1.5
VECTOR_DIM=1024

GRAPH_ENABLED=true
GRAPH_URI=bolt://neo4j:7687
GRAPH_USER=neo4j
GRAPH_PASSWORD=neo4j_password
GRAPH_DATABASE=neo4j
GRAPH_TIMEOUT_SEC=1.5

REDIS_ENABLED=true
REDIS_URL=redis://redis:6379/0
REDIS_TTL_SEC=300
REDIS_MAX_CONNECTIONS=500
REDIS_SOCKET_TIMEOUT_SEC=0.5
REDIS_LOCK_TTL_SEC=8
REDIS_LOCK_WAIT_MS=1500
REDIS_NAMESPACE=hybrid-search

LLM_RERANK_ENABLED=false
LLM_PROVIDER=ollama
LLM_API_KEY=
LLM_BASE_URL=https://api.openai.com/v1
LLM_CHAT_PATH=/chat/completions
LLM_EMBEDDINGS_PATH=/embeddings
LLM_AUTH_HEADER=Authorization
LLM_AUTH_PREFIX=Bearer 
LLM_EMBEDDING_MODEL=text-embedding-3-large
LLM_RERANK_MODEL=gpt-4.1-mini
BEDROCK_REGION=us-east-1
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1
BEDROCK_RERANK_MODEL_ID=anthropic.claude-3-5-haiku-20241022-v1:0
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_BASE_URLS=http://host.docker.internal:11434,http://localhost:11434,http://ollama:11434
OLLAMA_DEFAULT_MODEL=gpt-oss-120b-cloud
OLLAMA_PRELOAD_MODELS=gpt-oss-120b-cloud
OLLAMA_PRELOAD_TIMEOUT_SEC=300
GEMINI_API_KEY=
GEMINI_DEFAULT_MODEL=gemini-1.5-flash
GEMINI_RERANK_MODEL=gemini-1.5-flash
TIKA_URL=http://tika:9998
UPSTAGE_DPE_ENABLED=false
UPSTAGE_DPE_API_KEY=
UPSTAGE_DPE_BASE_URL=https://api.upstage.ai/v1/document-ai/document-parse
UPSTAGE_DPE_TIMEOUT_SEC=30.0
UPSTAGE_DPE_MIN_CHARS=80
AUTO_CONTEXT_EXTRACT_ENABLED=true
AUTO_CONTEXT_EXTRACT_USE_LLM=false
AUTO_CONTEXT_EXTRACT_MAX_CHARS=6000
AUTO_CONTEXT_EXTRACT_MIN_CHARS_FOR_LLM=120
AUTO_CONTEXT_EXTRACT_LLM_MODEL=
LLM_TIMEOUT_SEC=20.0
OLLAMA_TIMEOUT_SEC=120.0

SAMPLE_MODE=false
SAMPLE_DATA_PATH=sample_data/sample_docs.json
UPLOADS_DATA_PATH=data/uploaded_docs.json
UPLOADS_DIR=data/uploads

WEIGHT_ELASTIC=0.35
WEIGHT_VECTOR=0.45
WEIGHT_GRAPH=0.20
WEIGHT_LOCAL=0.30
MAX_CANDIDATES_PER_SOURCE=100
